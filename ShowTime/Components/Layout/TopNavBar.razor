@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@implements IDisposable

<nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-lg" style="background: linear-gradient(135deg, #4A2C3A 0%, #2F3349 100%); backdrop-filter: blur(20px);">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold fs-3" href="/" style="color: #FEFDF9; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
            <i class="fas fa-music me-3" style="color: #E53E3E;"></i>ShowTime
        </a>

        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="color: #FEFDF9;">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2 rounded-pill mx-1" href="" Match="NavLinkMatch.All" style="color: #F5F5DC; font-weight: 500; transition: all 0.3s ease;">
                        <i class="fas fa-home me-2"></i>Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2 rounded-pill mx-1" href="festivals" style="color: #F5F5DC; font-weight: 500; transition: all 0.3s ease;">
                        <i class="fas fa-calendar-alt me-2"></i>Festivals
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2 rounded-pill mx-1" href="getbands" style="color: #F5F5DC; font-weight: 500; transition: all 0.3s ease;">
                        <i class="fas fa-users me-2"></i>Bands
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2 rounded-pill mx-1" href="addbands" style="color: #F5F5DC; font-weight: 500; transition: all 0.3s ease;">
                        <i class="fas fa-plus me-2"></i>Add Bands
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2 rounded-pill mx-1" href="admin" style="color: #F5F5DC; font-weight: 500; transition: all 0.3s ease;">
                        <i class="fas fa-cog me-2"></i>Admin
                    </NavLink>
                </li>
            </ul>

            <ul class="navbar-nav">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3 py-2 rounded-pill" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #F5F5DC; font-weight: 500; border: 1px solid rgba(245, 245, 220, 0.3);" @onclick:preventDefault="true">
                                <i class="fas fa-user me-2"></i>@context.User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg" style="background: linear-gradient(145deg, #FEFDF9 0%, #F5F5DC 100%); border-radius: 1rem; margin-top: 0.5rem;">
                                <li>
                                    <NavLink class="dropdown-item py-2 px-3 rounded-3 mx-2 my-1" href="Account/Manage" style="color: #2C3E50; transition: all 0.3s ease;">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>Profile
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2 px-3 rounded-3 mx-2 my-1" href="Account/Manage" style="color: #2C3E50; transition: all 0.3s ease;">
                                        <i class="fas fa-cog me-2 text-secondary"></i>Settings
                                    </NavLink>
                                </li>
                                <li><hr class="dropdown-divider mx-2" style="border-color: rgba(112, 128, 144, 0.2);"></li>
                                <li>
                                    <form action="Account/Logout" method="post" enctype="application/x-www-form-urlencoded">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                        <button type="submit" class="dropdown-item py-2 px-3 rounded-3 mx-2 my-1" style="color: #E53E3E; transition: all 0.3s ease; background: none; border: none; width: 100%; text-align: left;">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3 py-2 rounded-pill" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #F5F5DC; font-weight: 500; border: 1px solid rgba(245, 245, 220, 0.3);" @onclick:preventDefault="true">
                                <i class="fas fa-user me-2"></i>Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg" style="background: linear-gradient(145deg, #FEFDF9 0%, #F5F5DC 100%); border-radius: 1rem; margin-top: 0.5rem;">
                                <li>
                                    <NavLink class="dropdown-item py-2 px-3 rounded-3 mx-2 my-1" href="Account/Login" style="color: #2C3E50; transition: all 0.3s ease;">
                                        <i class="fas fa-sign-in-alt me-2 text-primary"></i>Login
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2 px-3 rounded-3 mx-2 my-1" href="Account/Register" style="color: #2C3E50; transition: all 0.3s ease;">
                                        <i class="fas fa-user-plus me-2 text-success"></i>Register
                                    </NavLink>
                                </li>
                            </ul>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<style>
    .navbar {
        z-index: 1030;
        border-bottom: 1px solid rgba(245, 245, 220, 0.1);
        box-shadow: 0 8px 32px rgba(74, 44, 58, 0.3) !important;
    }

    .navbar-brand {
        font-size: 1.75rem;
        font-weight: 800;
        letter-spacing: -0.025em;
    }

    .nav-link {
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 2rem;
    }

        .nav-link:hover {
            background: rgba(229, 62, 62, 0.15) !important;
            color: #FEFDF9 !important;
            transform: translateY(-1px);
        }

    .navbar-nav .nav-link.active {
        background: linear-gradient(135deg, #E53E3E 0%, #FF6B6B 100%) !important;
        color: #FEFDF9 !important;
        box-shadow: 0 4px 8px rgba(229, 62, 62, 0.3);
    }

    .dropdown-item:hover {
        background: rgba(229, 62, 62, 0.1) !important;
        color: #E53E3E !important;
    }

    .navbar-toggler:focus {
        box-shadow: none;
    }
</style>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}